{
  "name": "neve",
  "nicename": "Neve",
  "version": "2.3.4",
  "description": "Neve theme by ThemeIsle",
  "category": "themes",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Codeinwp/neve.git"
  },
  "keywords": [
    "wordpress-theme"
  ],
  "theme": {
    "textdomain": "neve"
  },
  "author": "ThemeIsle <friends@themeisle.com>",
  "license": "GPL-2.0+",
  "bugs": {
    "url": "https://github.com/Codeinwp/neve/issues"
  },
  "pot": {
    "reportmsgidbugsto": "https://github.com/Codeinwp/neve/issues",
    "languageteam": "Themeisle Translate <friends@themeisle.com>",
    "lasttranslator": "Themeisle Translate Team <friends@themeisle.com>"
  },
  "devDependencies": {
    "@babel/core": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "babel-cli": "^6.26.0",
    "babel-loader": "^8.0.4",
    "cross-env": "^5.1.6",
    "grunt-cli": "^1.3.2",
    "grunt-contrib-clean": "^2.0.0",
    "grunt-contrib-concat": "^1.0.1",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-cssmin": "^2.2.1",
    "grunt-contrib-sass": "^1.0.0",
    "grunt-contrib-uglify": "^3.3.0",
    "grunt-contrib-watch": "^1.0.0",
    "grunt-rtlcss": "^2.0.1",
    "grunt-shell": "^3.0.1",
    "grunt-theme-fleet": "github:codeinwp/grunt-theme-fleet",
    "grunt-version": "^1.1.1",
    "husky": "^1.2.0",
    "load-project-config": "~0.2.0",
    "pre-commit": "^1.2.2",
    "webpack": "^4.27.0",
    "webpack-cli": "^3.1.2"
  },
  "scripts": {
    "phpcbf": "composer run-script format || true ",
    "phpcs": "composer run-script phpcs",
    "jshint": "grunt jshint",
    "buildCssJs": "grunt buildScripts",
    "addNewStyles": "git add *.css assets/**/*.css",
    "build": "cross-env webpack --mode production --module-bind js=babel-loader",
    "dev": "cross-env webpack --mode development --module-bind js=babel-loader --watch"
  },
  "pre-commit": {
    "run": [
      "phpcbf",
      "phpcs",
      "jshint",
      "build",
      "buildCssJs",
      "addNewStyles"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
